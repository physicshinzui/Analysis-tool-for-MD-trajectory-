cat<<EOS

###################################
This program analyzes trajectories. 
###################################

EOS

echo "Compiling ..."
#gfortran  -o analysis.exe \
#gfortran  -O3 -o analysis.exe \
gfortran  -pedantic -std=f95 -fbounds-check -O -Wuninitialized -ffpe-trap=invalid,zero,overflow -o analysis.exe \
          ../src/calc.f90 \
          ../src/rmsd_mod.f90 \
